<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"   
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:quercus="https://github.com/PaulWeb/quercusspring"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
                           https://github.com/PaulWeb/quercusspring
                           file:///home/user/Work/quercusspring/src/main/resources/quercusspring.xsd">
    <context:annotation-config />
    <quercus:php id="lime" 
          script-source="classpath:test.php" 
          script-interfaces="org.wp.test.spring.php.Lime" />
    <quercus:php id="fruit" script-interfaces="Fruit">
        <quercus:inline-script>
            function getId {
                return $id
            }
        </quercus:inline-script>
        <quercus:php name="id" value="12" />
    </quercus:php>
</beans>